source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

abstract_target 'PIATunnel' do
    pod 'SwiftyBeaver'
    pod 'OpenSSL-Apple', '~> 1.1.0h'

    target 'PIATunnel-iOS' do
        platform :ios, '9.0'
    end
    target 'PIATunnelHost' do
        platform :ios, '9.0'
    end

    target 'PIATunnel-macOS' do
        platform :osx, '10.11'
    end
end
